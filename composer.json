{
  "name": "flightphp/velt",
  "description": "ðŸš€ Velt is a quick and easy Svelte starter template with a FlightPHP backend ðŸ’»ðŸŒâœ¨",
  "license": "MIT",
  "type": "project",
  "require": {
    "flightphp/core": "^3.13",
    "php": ">=7.4"
  },
  "scripts": {
    "build:win": [
      "RD vendor /Q /S",
      "composer install --no-dev -o",
      "php -r \"if (!is_dir('node_modules')) `npm i`;\"",
      "npm run build",
      "composer archive"
    ],
    "build": [
      "rm vendor -rf",
      "composer install --no-dev -o",
      "php -r \"if (!is_dir('node_modules')) `npm i`;\"",
      "npm run build",
      "composer archive"
    ]
  },
  "archive": {
    "exclude": [
      ".vscode",
      "node_modules",
      "scripts",
      ".editorconfig",
      ".eslintrc.json",
      ".gitignore",
      ".git",
      "biome.json",
      "composer.*",
      "LICENSE",
      "package-lock.json",
      "package.json",
      "README.md",
      "rollup.config.js",
      "jsconfig.json",
      "pnpm-*"
    ]
  }
}
